<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsAppProject.Pages.NewsDetailPage">
    <Grid RowDefinitions="Auto,Auto,Auto">
        <Image Grid.Row="0" x:Name="ImgNews" HeightRequest="300" Aspect="Fill" HorizontalOptions="Center"/>
        <Label Grid.Row="1" x:Name="LblTitle" FontAttributes="Bold"/>
        <Label Grid.Row="2" x:Name="LblContent"/>
    </Grid>
</ContentPage>